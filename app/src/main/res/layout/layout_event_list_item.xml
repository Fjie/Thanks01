<?xml version="1.0" encoding="utf-8"?>
<com.gc.materialdesign.views.LayoutRipple xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FunctionPanel">

    <LinearLayout style="@style/ControlLayoutGlobal">

        <LinearLayout style="@style/ControlLayoutMeddle">

            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                style="@style/ControlLayoutGlobal">
                <TextView
                    android:textColor="@color/blue_light"
                    android:id="@+id/eventType"
                    style="@style/Body" />

                <TextView
                    android:gravity="right"
                    android:id="@+id/eventTime"
                    style="@style/Body"/>
            </LinearLayout>

            <TextView
                android:id="@+id/eventTitle"
                style="@style/Title" />


            <LinearLayout
                style="@style/ControlLayoutGlobal"
                android:clickable="true"
                android:paddingTop="8dp">

                <TextView
                    style="@style/Body"
                    android:text="您选择了:" />

                <TextView
                    android:id="@+id/eventResultUsers"
                    style="@style/Body"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/blue_light" />

                <TextView
                    android:id="@+id/eventResultUsersDesc"
                    style="@style/Body" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.gc.materialdesign.views.LayoutRipple>










