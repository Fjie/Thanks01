<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:md="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BackgroundPanel">

    <include layout="@layout/layout_toolbar" />

    <FrameLayout style="@style/AppPanel">

        <ScrollView style="@style/BackgroundPanel">


            <LinearLayout style="@style/BackgroundPanel">

                <TextView style="@style/Spliter" />

                <FrameLayout style="@style/ChildPanelPadding">

                    <LinearLayout style="@style/ControlLayoutGlobal">

                        <LinearLayout style="@style/ControlLayoutStart">

                            <ImageView
                                style="@style/FunctionIcon"
                                android:src="@drawable/ic_event" />
                        </LinearLayout>

                        <LinearLayout style="@style/ControlLayoutMeddle">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="你想要干什么" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout style="@style/ControlLayoutEnd"></LinearLayout>
                    </LinearLayout>
                </FrameLayout>


                <TextView style="@style/Spliter" />

                <FrameLayout style="@style/ChildPanelPadding">

                    <LinearLayout style="@style/ControlLayoutGlobal">

                        <LinearLayout style="@style/ControlLayoutStart">

                            <ImageView
                                style="@style/FunctionIcon"
                                android:src="@drawable/ic_people_count" />
                        </LinearLayout>

                        <LinearLayout style="@style/ControlLayoutMeddle">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="需要人数" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout style="@style/ControlLayoutEnd"></LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <TextView style="@style/Spliter" />

                <FrameLayout style="@style/ChildPanelPadding">

                    <LinearLayout style="@style/ControlLayoutGlobal">

                        <LinearLayout style="@style/ControlLayoutStart">

                            <ImageView
                                style="@style/FunctionIcon"
                                android:src="@drawable/ic_location" />
                        </LinearLayout>

                        <LinearLayout style="@style/ControlLayoutMeddle">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="地点" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout style="@style/ControlLayoutEnd"></LinearLayout>
                    </LinearLayout>
                </FrameLayout>


                <TextView style="@style/Spliter" />

                <FrameLayout style="@style/ChildPanelPadding">

                    <LinearLayout style="@style/ControlLayoutGlobal">

                        <LinearLayout style="@style/ControlLayoutStart">

                            <ImageView
                                style="@style/FunctionIcon"
                                android:src="@drawable/ic_content" />
                        </LinearLayout>

                        <LinearLayout style="@style/ControlLayoutMeddle">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="补充详细描述"
                                    android:minLines="3" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout style="@style/ControlLayoutEnd"></LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <TextView style="@style/Spliter" />

                <FrameLayout style="@style/ChildPanelPadding">

                    <LinearLayout style="@style/ControlLayoutGlobal">

                        <LinearLayout style="@style/ControlLayoutStart">

                            <ImageView
                                style="@style/FunctionIcon"
                                android:src="@drawable/ic_time" />
                        </LinearLayout>

                        <LinearLayout style="@style/ControlLayoutMeddle">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="结束时间" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout style="@style/ControlLayoutEnd"></LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</LinearLayout>