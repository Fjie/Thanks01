<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:md="http://schemas.android.com/apk/res-auto"
    style="@style/BackgroundPanel">

    <include layout="@layout/layout_toolbar"/>

    <FrameLayout
        style="@style/AppPanel">
        <ScrollView
            style="@style/AppPanel">
            <LinearLayout
                style="@style/ContentPanel">
                <TextView style="@style/Spliter"/>
                <com.gc.materialdesign.views.LayoutRipple
                    android:id="@+id/funUsersPanel"
                    android:onClick="onFunctionClick"
                    style="@style/FunctionPanel">
                    <LinearLayout
                        style="@style/ControlLayoutGlobal">
                        <ImageView
                            android:id="@+id/userImage"
                            android:layout_alignParentStart="true"
                            style="@style/UserImageBig" />
                        <LinearLayout
                            style="@style/ControlLayoutMeddle">

                            <TextView
                                android:id="@+id/userResume"
                                style="@style/Subhead"/>
                            <TextView
                                android:text="#吃货# #胖子# #大胖子#"
                                style="@style/Body"/>

                        </LinearLayout>
                        <LinearLayout
                            style="@style/ControlLayoutEnd">

                        </LinearLayout>
                    </LinearLayout>
                </com.gc.materialdesign.views.LayoutRipple>
                <TextView style="@style/Spliter"/>
                <com.gc.materialdesign.views.LayoutRipple
                    android:id="@+id/funUsersThanks"
                    android:onClick="onFunctionClick"
                    style="@style/FunctionPanel">
                    <LinearLayout
                        style="@style/ControlLayoutGlobal">
                        <ImageView
                            android:src="@drawable/ic_thanks"
                            style="@style/FunctionIcon"/>
                        <LinearLayout
                            style="@style/ControlLayoutMeddle">
                            <TextView
                                android:text="收到的感谢"
                                style="@style/Subhead"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/ControlLayoutEnd">
                            <TextView
                                android:id="@+id/thanksCound"
                                android:text="9999"
                                style="@style/Body"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.gc.materialdesign.views.LayoutRipple>
                <com.gc.materialdesign.views.LayoutRipple
                    android:id="@+id/funIssueEvent"
                    android:onClick="onFunctionClick"
                    style="@style/FunctionPanel">
                    <LinearLayout
                        style="@style/ControlLayoutGlobal">
                        <ImageView
                            android:src="@drawable/ic_event"
                            style="@style/FunctionIcon"/>
                        <LinearLayout
                            style="@style/ControlLayoutMeddle">
                            <TextView
                                android:text="发布的事件"
                                style="@style/Subhead"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/ControlLayoutEnd">
                            <TextView
                                android:id="@+id/eventCount"
                                android:text="9999"
                                style="@style/Body"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.gc.materialdesign.views.LayoutRipple>
                <TextView style="@style/Spliter"/>
                <com.gc.materialdesign.views.LayoutRipple
                    android:id="@+id/funFollowsUser"
                    android:onClick="onFunctionClick"
                    style="@style/FunctionPanel">
                    <LinearLayout
                        style="@style/ControlLayoutGlobal">
                        <ImageView
                            android:src="@drawable/ic_follows"
                            style="@style/FunctionIcon"/>
                        <LinearLayout
                            style="@style/ControlLayoutMeddle">
                            <TextView
                                android:text="ta关注的人"
                                style="@style/Subhead"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/ControlLayoutEnd">
                            <TextView
                                android:id="@+id/followUser"
                                android:text="9999"
                                style="@style/Body"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.gc.materialdesign.views.LayoutRipple>
                <com.gc.materialdesign.views.LayoutRipple
                    android:id="@+id/funLikeUser"
                    android:onClick="onFunctionClick"
                    style="@style/FunctionPanel">
                    <LinearLayout
                        style="@style/ControlLayoutGlobal">
                        <ImageView
                            android:src="@drawable/ic_fans"
                            style="@style/FunctionIcon"/>
                        <LinearLayout
                            style="@style/ControlLayoutMeddle">
                            <TextView
                                android:text="关注ta的人"
                                style="@style/Subhead"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/ControlLayoutEnd">
                            <TextView
                                android:id="@+id/likeUser"
                                android:text="9999"
                                style="@style/Body"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.gc.materialdesign.views.LayoutRipple>
                <TextView style="@style/Spliter"/>
                <com.gc.materialdesign.views.LayoutRipple
                    android:id="@+id/funUsersParty"
                    android:onClick="onFunctionClick"
                    style="@style/FunctionPanel">
                    <LinearLayout
                        style="@style/ControlLayoutGlobal">
                        <ImageView
                            android:src="@drawable/ic_partys"
                            style="@style/FunctionIcon"/>
                        <LinearLayout
                            style="@style/ControlLayoutMeddle">
                            <TextView
                                android:text="所属的组织"
                                style="@style/Subhead"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/ControlLayoutEnd">
                            <TextView
                                android:id="@+id/groupUserCount"
                                android:text="5"
                                style="@style/Body"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.gc.materialdesign.views.LayoutRipple>
                <TextView style="@style/Spliter"/>
                <com.gc.materialdesign.views.LayoutRipple
                    android:id="@+id/funUserCity"
                    android:onClick="onFunctionClick"
                    style="@style/FunctionPanel">
                    <LinearLayout
                        style="@style/ControlLayoutGlobal">
                        <ImageView
                            android:src="@drawable/ic_location"
                            style="@style/FunctionIcon"/>
                        <LinearLayout
                            style="@style/ControlLayoutMeddle">
                            <TextView
                                android:text="ta在 湖南城市学院"
                                style="@style/Subhead"/>
                        </LinearLayout>
                        <LinearLayout
                            style="@style/ControlLayoutEnd">
                            <TextView
                                android:id="@+id/userCity"
                                style="@style/Body"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.gc.materialdesign.views.LayoutRipple>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_bottom_height"/>
            </LinearLayout>
        </ScrollView>
        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/addFollow"
            md:animate="true"
            style="@style/ButtonFloat"/>
    </FrameLayout>

</LinearLayout>
